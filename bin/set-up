mkdir -p zones archive keys tmp
chmod 700 keys

rm keys/*
dnssec-keygen -K keys -a ECDSAP384SHA384 -n ZONE -r /dev/urandom -L 86400 -f KSK -3 .
dnssec-keygen -K keys -a ECDSAP384SHA384 -n ZONE -r /dev/urandom -L 86400 -3 .

