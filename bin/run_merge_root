#! /bin/sh

base="$(dirname $(dirname ${0}))"

cd ${base}
. config

exec ${base}/bin/merge_root $* \
	-Y 1 -i "$(hostname)" \
	-I ${bind_local_prefix}.3 \
	-r ${base}/etc/rndc.conf \
	-T ${base}/named/data/tmp \
	-D ${base}/named/data/zones/ROOT.merged \
	-K ${base}/keys \
	\
	-R ${base}/bin/quick_dump -y 0

	# 2>&1 | logger -t merge_root
